# ---------------------------------------------------------------
# Imagen python ligera
# ---------------------------------------------------------------
FROM python:3.12-slim

# ---------------------------------------------------------------
# Seguridad: crear usuario sin privilegios
# ---------------------------------------------------------------
ARG USER_ID=1000
ARG GROUP_ID=1000

RUN groupadd -g $GROUP_ID appuser && \
    useradd -u $USER_ID -g appuser -s /bin/sh -m appuser

# ---------------------------------------------------------------
# Dependencias del sistema necesarias para compilaci贸n de paquetes
# ---------------------------------------------------------------
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential libpq-dev && \
    rm -rf /var/lib/apt/lists/*

# ---------------------------------------------------------------
# Variables de entorno para un entorno predecible
# ---------------------------------------------------------------
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PATH="/home/appuser/.local/bin:$PATH"

# ---------------------------------------------------------------
# Directorio de trabajo dentro del contenedor
# ---------------------------------------------------------------
WORKDIR /usr/src/app

# ---------------------------------------------------------------
# Instalaci贸n de dependencias
# ---------------------------------------------------------------
COPY --chown=appuser:appuser requirements.txt .

RUN pip install --upgrade pip && \
    pip install --no-cache-dir -r requirements.txt

# ---------------------------------------------------------------
# Copiar el c贸digo fuente de la aplicaci贸n
# ---------------------------------------------------------------
COPY --chown=appuser:appuser . .

# ---------------------------------------------------------------
# Cambiar al usuario seguro (no root)
# ---------------------------------------------------------------
USER appuser

# ---------------------------------------------------------------
# Comando por defecto (puede ser sobrescrito por docker-compose)
# ---------------------------------------------------------------
CMD ["python", "manage.py", "runserver", "0.0.0.0:8000"]
